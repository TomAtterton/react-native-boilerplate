{
	"name": "Boilerplate",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "node node_modules/react-native/local-cli/cli.js start",
		"custom": "node node_modules/react-native/local-cli/cli.js custom",
		"prepush": "eslint . --cache",
		"precommit": "lint-staged",
		"test-ios": "detox build -c ios.sim.debug && detox test -c ios.sim.debug",
		"test-android": "detox build -c android.emu.debug && detox test -c android.emu.debug -l verbose",
		"test:unit": "jest . --config=./test_config/jest_config.json -u",
		"test": "yarn test:unit && yarn test:ios:release"
	},
	"dependencies": {
		"prop-types": "^15.6.0",
		"react": "16.3.1",
		"react-native": "0.55.4",
		"react-native-i18n": "^2.0.12",
		"react-native-vector-icons": "^4.5.0",
		"react-redux": "^5.0.6",
		"redux": "^4.0.0",
		"redux-actions": "^2.2.1",
		"redux-mock-store": "^1.5.1",
		"redux-persist": "^5.6.10",
		"redux-thunk": "^2.2.0",
		"reselect": "^3.0.1"
	},
	"devDependencies": {
		"babel-eslint": "^8.2.3",
		"babel-jest": "23.0.1",
		"babel-preset-react-native": "4.0.0",
		"detox": "^7.3.7",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"enzyme-to-json": "^3.3.4",
		"eslint": "^4.19.1",
		"eslint-config-airbnb-base": "^12.1.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-import": "^2.12.0",
		"eslint-plugin-prettier": "^2.6.0",
		"eslint-plugin-react": "^7.8.2",
		"husky": "^0.14.3",
		"jest": "23.1.0",
		"lint-staged": "^7.1.2",
		"prettier": "^1.13.3",
		"react-dom": "^16.4.0",
		"react-test-renderer": "16.3.1"
	},
	"lint-staged": {
		"*.js": [
			"yarn prepush",
			"git add"
		]
	},
	"detox": {
		"test-runner": "jest",
		"runner-config": "./test_config/detox_config.json",
		"specs": ".",
		"configurations": {
			"ios.sim.release": {
				"binaryPath": "ios/build/Build/Products/Release-iphonesimulator/Boilerplate.app",
				"build": "export RCT_NO_LAUNCH_PACKAGER=true && xcodebuild -project ios/Boilerplate.xcodeproj -scheme Boilerplate -configuration Release -sdk iphonesimulator -derivedDataPath ios/build -quiet",
				"type": "ios.simulator",
				"name": "iPhone 7 Plus"
			},
			"ios.sim.debug": {
				"binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/Boilerplate.app",
				"build": "xcodebuild -project ios/Boilerplate.xcodeproj -scheme Boilerplate -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
				"type": "ios.simulator",
				"name": "iPhone 7 Plus"
			},
			"android.emu.debug": {
				"binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
				"build": "pushd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && popd",
				"type": "android.emulator",
				"name": "Nexus"
			},
			"android.emu.release": {
				"binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
				"build": "pushd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && popd",
				"type": "android.emulator",
				"name": "Nexus_5X_API_26"
			}
		}
	}
}
